    "connect2door": "Data Source=localhost,1433;Initial Catalog=connect2door;Integrated Security=false;user id=sa;password=Pa$$word123;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EmailSettings": {
    "EnableSsl": true,
    "DeliveryMethod": 0,
    "UseDefaultCredentials": false,
    "EmailFrom": "ship@connect2door.app",
    "SMTPPort": "587",
